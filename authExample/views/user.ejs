<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>User List</title>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <h1 class="text-3xl mb-3">Showing Users</h1>
        <div class="users w-full flex flex-wrap gap-3">
            <% users.forEach((user) => { %>
                <div class="user bg-zinc-700 p-5 rounded-lg w-[20vw] break-words">
                    <h1 class="text-xl font-bold">Name : <%= user.username %></h1>
                    <h2 class="text-lg">Email : <%= user.email %></h2>
                    <p class="text-sm">Password : <%= user.password %></p>
                    <p class="text-sm">Age : <%= user.age %> years old</p>
                </div>
           <% }) %>
        </div>
    </div>
</body>
</html>
