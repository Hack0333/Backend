<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full min-h-full bg-zinc-900 px-10 py-2">
      <div class="flex item-center w-[40%] mb-4">
        <h1 class="text-2xl text-zinc-300 mr-4">All Users</h1>
      </div>
      <div class="Users flex gap-3 flex-wrap">
        <% users.forEach((user) => { %>
        <div class="User p-2 bg-zinc-700 max-w-[17%] rounded-md">
          <div class="rounded-md">
            <img
              class="rounded-md object-cover h-40 w-full"
              src="<%= user.Image %>"
              alt="User Image"
            />
          </div>
          <div class="mt-3 p-2">
            <h1><%= user.Name %></h1>
            <h1><%= user.Email %></h1>
          </div>
          <div
            class="flex justify-between items-center mt-1 p-2"
          >
            <a href="/edit/<%= user._id %>" class="text-zinc-500">Edit</a>
            <a href="/delete/<%= user._id %>" class="text-red-600">Delete</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
