  <body>
    <div class="main w-full min-h-screen px-14 bg-zinc-900 py-3">
      <h1 class="text-3xl text-white text-center">Task Manager</h1>
      <div class="mt-3">
        <form action="/create" method="post">
          <input 
          class="block w-full p-2 mb-3 rounded-md outline-none bg-zinc-600 text-white"
          type="text" 
          placeholder="Enter the title" 
          name="title" />
          <textarea
            name="details"
            placeholder="Enter your text"
            class="resize-none block w-full p-2 rounded-md outline-none bg-zinc-600 text-white"
          ></textarea>
          <button type="submit" class="text-xl bg-blue-600 py-2 px-4 mt-3 rounded-md hover:bg-blue-800">Create task</button>
        </form>
      </div>
      <% if(files.length > 0) { %>
        <div class="tasks w-full mt-6 flex flex-wrap gap-10">
        <% files.forEach((file)=>{ %>
            <div class="task w-[15vw] bg-zinc-600 p-2 rounded-md">
              <h1 class="text-center text-white tracking-tighter font-medium"><%= file %></h1>
              <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorem quibusdam nostrum </p>
              <a href="" class="text-blue-500">READ MORE</a>
            </div>
            <%})%>
          </div>
